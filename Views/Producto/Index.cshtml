@model IEnumerable<branding.Models.Producto>

@{
    ViewData["Title"] = "Agregar - ";
}
<section id="catalogue" class="biografia section-bggg">
        <div class="container">
         <div class="section-title">
          <h2 aling = "center "data-aos="fade-in">AGREGAR O EDITAR UN PRODUCTO</h2>
        </div>

<p>
    <a asp-action="Create"><h9>Agregar Producto</h9></a>
</p>
<table class="table table-hover">
    <thead class="tables">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagenName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>Opciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    <thead class="tabless">
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImagenName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.ID">Editar</a> |
                <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.ID">Detalles</a> |
                <a class="btn btn-primary" asp-action="Delete" asp-route-id="@item.ID">Borrar</a>
            </td>
        </tr>
        </thead>
}
    </tbody>
</table>
