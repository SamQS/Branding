@page
@model RegisterModel
@{
    ViewData["Title"] = "Registrarse - ";
}
<!--JQUERY-->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    
    <!-- FRAMEWORK BOOTSTRAP para el estilo de la pagina-->
    <link rel="stylesheet" href="bootstrap.min.css">
    
    <!-- Los iconos tipo Solid de Fontawesome-->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.8/css/solid.css">
    <script src="https://use.fontawesome.com/releases/v5.0.7/js/all.js"></script>
<body>

    
<main role="main">
    <section id="catalogue" class="biografia section-bggg">
        
        <div class="container bg-white mt-5 rounded shadow " >
        <div class="row align-items-center align-items-stretch">
            <div class="col d-none d-lg-block col-md-5 col-lg-5 col-xl-6 rounded bg">
                <img src="~/img/cameraini.jpg" alt="" style="width: 800px; height:850px" class="position-relative" >
            </div>

        
     <div class="col bg-white p-5 col-lg-7 col-xl-6 rounded-end">
            
                <div class="section-title section-titleee">
                    <img src="~/img/alfalogo.png" alt="" style="width:300px" class="position-relative" >
                    <h2 class="fw-bold text-center pt-5 mb-5">Crear una Cuenta Nueva</h2>



        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email">Correo electrónico</label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password">Contraseña:</label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword">Confirma tu Contraseña:</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Registrarse</button>
        </form>
    </div>
   
</div>
</body>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
