@model IEnumerable<branding.Models.Proforma>

@{
    ViewData["Title"] = "Index";
}
<section id="biografia" class="biografia section-bggg">
<div class="container">
    <div class="section-title">
<h2 aling = "center "data-aos="fade-in">Carrito</h2>
</div>
<table class="table table-hover">
    <thead class="tables">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Producto.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    <thead class="tabless">
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Producto.Name)
            </td>
            <td>
                <a style="color:#000000" asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a style="color:#000000" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
        </thead>
}
    </tbody>
</table>
