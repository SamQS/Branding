
@model IEnumerable<branding.Models.Producto>

@{
    ViewData["Title"] = "Precios - ";
    
}
<body>
  <main role="main">
<section id="catalogue" class="biografia section-bggg">
  <div class="section-title">
<h2 aling = "center "data-aos="fade-in">PRECIO - SERVICIO</h2>
<h9 data-aos="fade-in" >Consulta de Precios y realizacion de Pedidos</h9>
</div>
  <div class="container">
    <h1>@ViewData["Message"]</h1>
    <div class="row">
      <div class="col">
        <div id="products" class="mb-3">
          <div class="row">

            @foreach (var item in Model) {
            <div class="col-sm-4">
              <div class="card mb-3">
                <div class="card-body">
                  <div class="card-img-actions">
                    <img class="img-responsive" width="310" height="500"
                       src="~/img/@item.ImagenName" alt="@item.ImagenName"  />
                  </div>
                </div>
                <div style="text-align:center;" class="card-body">
                  <h5 class="card-title" style="color:#ffffff;" >@Html.DisplayFor(modelItem => item.Name)</h5>
                  <p class="card-text" style="color:#ffffff;"> <a class="btn btn-primary"> <i class="icofont-price"></i> S/.@Html.DisplayFor(modelItem => item.Price)</a> </p>
                  <a class="btn btn-primary" asp-action="Add" asp-route-id="@item.ID"><i class="icofont-cart"></i>AGREGAR</a>
                </div>
              </div>
            </div>
            }
          </div>
        </div>
      </div>
    </div>
  </div>

  </main>

   <script src="/lib/jquery/dist/jquery.min.js"></script>
    <script src="/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/lib/jquery.easing/jquery.easing.min.js"></script>
    <script src="/js/site.js"></script>
    <script src="/lib/jquery/dist/jquery.min.js"></script>
    <script src="/js/site.js?v=kiomgqYW2VDSehqhKuh0EW7qq2fYklauFIbQW6OojRI"></script>
  </body>